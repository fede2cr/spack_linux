#!/bin/sh
#item   ####description                                      ###on off ###
TMP=/var/log/setup/tmp
if [ ! -d $TMP ]; then
  mkdir -p $TMP
fi
cat /dev/null > $TMP/SeTnewtag
dialog --title "SELECTING PACKAGES FROM SERIES E (GNU EMACS)" \
       --checklist "Please confirm the packages you wish to install \
from series E.  Use the UP/DOWN keys to scroll through the list, and \
the SPACE key to deselect any items you don't want to install.  \
Press ENTER when you are \
done." 16 72 6 \
"emacs" "The base GNU Emacs 21.4a system" "on" \
"emacs-misc" "Miscellaneous files for Emacs 21.4a" "on" \
"emacs-lisp" "Lisp source files for Emacs 21.4a" "on" \
"emacs-leim" "Handles non-English languages and keyboards" "on" \
"emacs-info" "Info (documentation) files for Emacs" "on" \
"emacs-nox" "An emacs binary that does not require X" "on" \
2> $TMP/SeTpkgs
if [ $? = 1 -o $? = 255 ]; then
 rm -f $TMP/SeTpkgs
 > $TMP/SeTnewtag
 for pkg in emacs emacs-info emacs-leim emacs-lisp emacs-misc emacs-nox ; do
  echo "$pkg: SKP" >> $TMP/SeTnewtag
 done
 exit
fi
cat /dev/null > $TMP/SeTnewtag
for PACKAGE in emacs emacs-info emacs-leim emacs-lisp emacs-misc emacs-nox ; do
 if fgrep \"$PACKAGE\" $TMP/SeTpkgs 1> /dev/null 2> /dev/null ; then
  echo "$PACKAGE: ADD" >> $TMP/SeTnewtag
 else
  echo "$PACKAGE: SKP" >> $TMP/SeTnewtag
 fi
done
rm -f $TMP/SeTpkgs
