#!/bin/sh
# Set initial variables:
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-smailcfg

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

## Explode the package framework:
#cd $PKG
#explodepkg $CWD/_smailcfg.tar.gz

echo "+====================+"
echo "| sendmail.cf.8.11.6 |"
echo "+====================+"
( cd $TMP/sendmail-8.11.6 ; find . -name "*~" -print -exec rm {} \; )
cd $PKG
mkdir -p usr/src/sendmail/cf
cd usr/src/sendmail/cf
cp -a $TMP/sendmail-8.11.6/cf/README .
cp -a $TMP/package-sendmail/usr/src/sendmail/README.linux .
for dir in cf domain feature hack m4 mailer ostype sh siteconfig ; do
  cp -a $TMP/sendmail-8.11.6/cf/$dir .
done
chown -R root.root *

# Build the package:
cd $PKG
tar czvf $TMP/smailcfg.tgz .

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/procmail-3.21
  rm -rf $TMP/sendmail-8.11.6
  rm -rf $PKG
fi
