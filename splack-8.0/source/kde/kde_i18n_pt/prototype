VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_pt-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Portuguese Language Support"
DESC="\
kde-i18n-pt-$VERSION\n\
\n\
Portuguese language support."

compile() {
   tar xvyf $CWD/kde-i18n-pt-$VERSION.tar.bz2
   cd kde-i18n-pt
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
