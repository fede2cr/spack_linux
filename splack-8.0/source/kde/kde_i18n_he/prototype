VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_he-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Hebrew Language Support"
DESC="\
kde-i18n-he-$VERSION\n\
\n\
Hebrew language support."

compile() {
   tar xvyf $CWD/kde-i18n-he-$VERSION.tar.bz2
   cd kde-i18n-he
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
