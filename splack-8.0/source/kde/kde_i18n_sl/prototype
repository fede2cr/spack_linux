VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_sl-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Slovenian Language Support"
DESC="\
kde-i18n-sl-$VERSION\n\
\n\
Slovenian language support."

compile() {
   tar xvyf $CWD/kde-i18n-sl-$VERSION.tar.bz2
   cd kde-i18n-sl
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
