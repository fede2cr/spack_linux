VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_lt-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Lithuanian Language Support"
DESC="\
kde-i18n-lt-$VERSION\n\
\n\
Lithuanian language support."

compile() {
   tar xvyf $CWD/kde-i18n-lt-$VERSION.tar.bz2
   cd kde-i18n-lt
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
