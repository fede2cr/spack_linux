VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_ko-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Korean Language Support"
DESC="\
kde-i18n-ko-$VERSION\n\
\n\
Korean language support."

compile() {
   tar xvyf $CWD/kde-i18n-ko-$VERSION.tar.bz2
   cd kde-i18n-ko
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
