VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_zh_TW-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Chinese Language Support"
DESC="\
kde-i18n-zh_TW.Big5-$VERSION\n\
\n\
Chinese language support."

compile() {
   tar xvyf $CWD/kde-i18n-zh_TW.Big5-$VERSION.tar.bz2
   cd kde-i18n-zh_TW.Big5
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
