VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_it-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Italian Language Support"
DESC="\
kde-i18n-it-$VERSION\n\
\n\
Italian language support."

compile() {
   tar xvyf $CWD/kde-i18n-it-$VERSION.tar.bz2
   cd kde-i18n-it
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
