VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_tr-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Turkish Language Support"
DESC="\
kde-i18n-tr-$VERSION\n\
\n\
Turkish language support."

compile() {
   tar xvyf $CWD/kde-i18n-tr-$VERSION.tar.bz2
   cd kde-i18n-tr
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
