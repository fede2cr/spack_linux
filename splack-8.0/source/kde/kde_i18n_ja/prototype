VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_ja-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Japanese Language Support"
DESC="\
kde-i18n-ja-$VERSION\n\
\n\
Japanese language support."

compile() {
   tar xvyf $CWD/kde-i18n-ja-$VERSION.tar.bz2
   cd kde-i18n-ja
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
