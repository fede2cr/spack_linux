VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_pl-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Polish Language Support"
DESC="\
kde-i18n-pl-$VERSION\n\
\n\
Polish language support."

compile() {
   tar xvyf $CWD/kde-i18n-pl-$VERSION.tar.bz2
   cd kde-i18n-pl
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
