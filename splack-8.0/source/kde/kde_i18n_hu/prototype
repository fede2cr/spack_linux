VERSION=2.1.1
BUILD=1
ARCH=sparc
TAG=OPT

PKGNAME=kde_i18n_hu-$VERSION-$ARCH-$BUILD
MAINTAINER="David Cantrell <david@slackware.com>"

IGNOREPATH=/tmp:/proc:/dev:/root:/a:/var

PROGNAME="KDE Hungarian Language Support"
DESC="\
kde-i18n-hu-$VERSION\n\
\n\
Hungarian language support."

compile() {
   tar xvyf $CWD/kde-i18n-hu-$VERSION.tar.bz2
   cd kde-i18n-hu
   ./configure --prefix=/opt/kde
   make
}

install() {
   make install
}
