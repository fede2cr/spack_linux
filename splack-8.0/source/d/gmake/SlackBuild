#!/bin/sh
# Set initial variables:
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-gmake
INFO=$PKG/usr/info

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

# Explode the package framework:
cd $PKG
explodepkg $CWD/_gmake.tar.gz

echo "+=============+"
echo "| make-3.79.1 |"
echo "+=============+"
cd $TMP
tar xzvf $CWD/make-3.79.1.tar.gz
cd make-3.79.1
CFLAGS=-O2 LDFLAGS=-s ./configure --prefix=/usr sparc-slackware-linux
make
cat make > $PKG/usr/bin/make
mkdir -p $INFO
for file in make.info* ; do
 cat $file | gzip -9c > $INFO/$file.gz
done
cat make.1 | gzip -9c > $PKG/usr/man/man1/make.1.gz
cd i18n
for file in *.mo ; do
  mkdir -p $PKG/usr/share/locale/`basename $file .mo`/LC_MESSAGES
  cat $file > $PKG/usr/share/locale/`basename $file .mo`/LC_MESSAGES/make.mo
done
cd ..
mkdir -p $PKG/usr/doc/make-3.79.1
cp -a ABOUT-NLS AUTHORS COPYING INSTALL NEWS README README.customs \
  $PKG/usr/doc/make-3.79.1/
chmod 644 $PKG/usr/doc/make-3.79.1/*
chown root.root $PKG/usr/doc/make-3.79.1/*

# Build the package:
cd $PKG
tar czvf $TMP/gmake.tgz .

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/make-3.79.1
  rm -rf $PKG
fi
