#!/bin/sh
# Set initial variables:
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-apsfilter

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

# Explode the package framework:
cd $PKG
explodepkg $CWD/_apsfilter.tar.gz

echo "+===============+"
echo "| apsfilter     |"
echo "+===============+"

mkdir -p $PKG/usr/lib $PKG/usr/doc
cd $PKG/usr/lib
tar xzvf $CWD/apsfilter-6.1.1.tar.gz
ln -sf /usr/lib/apsfilter $PKG/usr/doc/apsfilter-6.1.1

# Build the package:
cd $PKG
tar czvf $TMP/apsfilter.tgz .

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

