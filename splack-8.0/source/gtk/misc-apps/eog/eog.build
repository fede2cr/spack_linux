#!/bin/sh
CWD=`pwd` 
cd /tmp
tar xzvf $CWD/eog-0.6.tar.gz
cd eog-0.6
CFLAGS=-O2 ./configure --prefix=/opt/gnome \
            --sysconfdir=/etc/opt/gnome \
            --with-catgets \
            i386-slackware-linux
make
make install
mkdir -p /usr/doc/eog-0.6
cp -a ABOUT-NLS AUTHORS COPYING ChangeLog DEPENDS HACKING INSTALL MAINTAINERS NEWS README THANKS TODO \
   /usr/doc/eog-0.6
chown -R root.root /usr/doc/eog-0.6
