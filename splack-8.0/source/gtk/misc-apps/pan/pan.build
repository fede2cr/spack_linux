#!/bin/sh
CWD=`pwd`
cd /tmp
tar xyvf $CWD/pan-0.9.7.tar.bz2
cd pan-0.9.7
CFLAGS=-O2 ./configure --prefix=/opt/gnome \
            --sysconfdir=/etc/opt/gnome \
            --localstatedir=/var/lib \
            --enable-html \
            i386-slackware-linux
make
make install
mkdir /usr/doc/pan-0.9.7
cp -a ABOUT-NLS AUTHORS COPYING INSTALL NEWS README TODO docs/* \
  /usr/doc/pan-0.9.7
rm -f /usr/doc/pan-0.9.7/Makefil*
chmod 644 /usr/doc/pan-0.9.7/*
chown root.root /usr/doc/pan-0.9.7/*
