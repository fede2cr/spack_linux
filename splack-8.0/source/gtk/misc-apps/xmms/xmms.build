#!/bin/sh
CWD=`pwd`
cd /tmp
tar xyvf $CWD/xmms-1.2.5.tar.bz2
cd xmms-1.2.5
CFLAGS=-O2 ./configure --prefix=/opt/gnome \
            --sysconfdir=/etc/opt/gnome \
            --localstatedir=/var/lib \
            i386-slackware-linux
make
make install
mkdir /usr/doc/xmms-1.2.5
cp -a ABOUT-NLS AUTHORS COPYING ChangeLog FAQ INSTALL NEWS README TODO \
  /usr/doc/xmms-1.2.5
chmod 644 /usr/doc/xmms-1.2.5/*
chown root.root /usr/doc/xmms-1.2.5/*
