#!/bin/sh
CWD=`pwd` 
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-gnomedia

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

cd $TMP
tar xyvf $CWD/gnome-media-1.2.3.tar.bz2
cd gnome-media-1.2.3
CFLAGS=-O2 ./configure --prefix=/opt/gnome \
	    --sysconfdir=/etc/opt/gnome \
            --localstatedir=/var/lib \
            sparc-slackware-linux
make
make DESTDIR=$PKG install
mkdir -p $PKG/usr/doc/gnome-media-1.2.3
cp -a AUTHORS COPYING ChangeLog NEWS README $PKG/usr/doc/gnome-media-1.2.3
chown -R root.root $PKG/usr/doc/gnome-media-1.2.3

# Build the package:
cd $PKG
echo "y
n" | makepkg $TMP/gnomedia.tgz

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/gnome-media-1.2.3
  rm -rf $PKG
fi
