#!/bin/sh
CWD=`pwd` 
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-panelmm

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

cd $TMP
tar xzvf $CWD/panelmm-0.1.tar.gz
cd panelmm-0.1
CXXFLAGS=-O2 ./configure --prefix=/opt/gnome \
	    --sysconfdir=/etc/opt/gnome \
            sparc-slackware-linux
make
make DESTDIR=$PKG install
mkdir -p $PKG/usr/doc/panelmm-0.1
cp -a AUTHORS COPYING COPYING.LIB ChangeLog INSTALL NEWS README \
   $PKG/usr/doc/panelmm-0.1
chown -R root.root $PKG/usr/doc/panelmm-0.1

# Build the package:
cd $PKG
echo "y
n" | makepkg $TMP/panelmm.tgz

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/panelmm-0.1
  rm -rf $PKG
fi
