#!/bin/sh
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-glib

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

cd $TMP
tar xzvf $CWD/glib-1.2.10.tar.gz
cd glib-1.2.10
./configure --prefix=/opt/gnome \
            --sysconfdir=/etc/opt/gnome \
            sparc-slackware-linux
make CFLAGS="-O2 -Wall -D_REENTRANT"
make DESTDIR=$PKG CFLAGS="-O2 -Wall -D_REENTRANT" install
gzip -9 $PKG/opt/gnome/man/man1/*
mkdir -p $PKG/usr/doc/glib-1.2.10
cp -a AUTHORS COPYING INSTALL NEWS README $PKG/usr/doc/glib-1.2.10
chmod 644 $PKG/usr/doc/glib-1.2.10/*
chown root.root $PKG/usr/doc/glib-1.2.10/*
chmod 755 $PKG/opt/gnome/lib/libgmod*.so.*

# Build the package:
cd $PKG
echo "y
n" | makepkg $TMP/glib.tgz

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/glib-1.2.10
  rm -rf $PKG
fi
