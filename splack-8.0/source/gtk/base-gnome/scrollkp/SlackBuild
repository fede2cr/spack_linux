#!/bin/sh
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-scrollkp

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

cd $TMP
tar xzvf $CWD/scrollkeeper-0.2.tar.gz
cd scrollkeeper-0.2
./configure --prefix=/opt/gnome \
            --sysconfdir=/etc/opt/gnome \
            --localstatedir=/var \
            sparc-slackware-linux
make
make DESTDIR=$PKG install
mkdir -p $PKG/var/log/setup
cat $CWD/setup.0scrollkeeper > $PKG/var/log/setup/setup.0scrollkeeper
chmod 755 $PKG/var/log/setup/setup.0scrollkeeper
# this doinst.sh, BTW, should be used in every package with scrollkeeper docs.
mkdir $PKG/install
cat $CWD/doinst.sh > $PKG/install/doinst.sh
( cd $PKG/var/lib/scrollkeeper && rm -r * )
mkdir -p $PKG/usr/doc/scrollkeeper-0.2
cp -a ABOUT-NLS AUTHORS COPYING COPYING-DOCS ChangeLog INSTALL NEWS README \
  $PKG/usr/doc/scrollkeeper-0.2
chmod 644 $PKG/usr/doc/scrollkeeper-0.2/*
chown root.root $PKG/usr/doc/scrollkeeper-0.2/*

# Build the package:
cd $PKG
echo "y
n" | makepkg $TMP/scrollkp.tgz

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/scrollkeeper-0.2
  rm -rf $PKG
fi
