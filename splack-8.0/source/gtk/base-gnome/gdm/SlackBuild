#!/bin/sh
CWD=`pwd` 
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-gdm

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

cd $TMP
tar xyvf $CWD/gdm-2.2.2.1.tar.bz2
cd gdm-2.2.2.1
zcat $CWD/gdm.rootlogin.diff.gz | patch -p1 --backup --verbose --suffix=.orig
./configure --prefix=/opt/gnome \
            --sysconfdir=/etc/opt/gnome \
            --localstatedir=/var/lib \
            sparc-slackware-linux
make CFLAGS=-O2
# DESTDIR=$PKG ain't working for me.
make sysconfdir=$PKG/etc/opt/gnome prefix=$PKG/opt/gnome CFLAGS=-O2 install


( cd /etc/X11 ; rm -rf gdm ; ln -sf /etc/opt/gnome/gdm . )
( cd $PKG
  tar xzvf $CWD/gdm-sessions.tar.gz
  cd etc/X11/gdm/Sessions ; ln -sf Default default
)

mkdir -p $PKG/usr/doc/gdm-2.2.2.1
cp -a ABOUT-NLS AUTHORS COPYING ChangeLog INSTALL NEWS README \
   README.install RELEASENOTES TODO $PKG/usr/doc/gdm-2.2.2.1
chown -R root.root $PKG/usr/doc/gdm-2.2.2.1
mkdir -p $PKG/var/lib/gdm
chown -R gdm.gdm $PKG/var/lib/gdm
echo "/opt/gnome/bin/gnome-session" > $PKG/etc/opt/gnome/gdm/gnomerc

# Build the package:
cd $PKG
echo "y
n" | makepkg $TMP/gdm.tgz

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/gdm-2.2.2.1
  rm -rf $PKG
fi
