#!/bin/sh
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=/tmp/package-libungif

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

cd $TMP
tar xzvf $CWD/libungif-4.1.0.tar.gz
cd libungif-4.1.0
CFLAGS=-O2 ./configure --prefix=/usr \
                       sparc-slackware-linux
make
mkdir -p $PKG/usr/doc/libungif-4.1.0
cp -a AUTHORS BUGS COPYING ChangeLog INSTALL NEWS ONEWS README TODO \
   UNCOMPRESSED_GIF doc $PKG/usr/doc/libungif-4.1.0
rm $PKG/usr/doc/libungif-4.1.0/doc/Makefile*
chown -R root.root $PKG/usr/doc/libungif-4.1.0
mkdir -p $PKG/usr/lib
cp lib/.libs/libungif.so.4.1.0 $PKG/usr/lib
cp lib/.libs/libungif.a $PKG/usr/lib
cp lib/libungif.la $PKG/usr/lib
( cd $PKG/usr/lib
  ln -sf libungif.so.4.1.0 libungif.so.4
  ln -sf libungif.so.4 libungif.so
  ln -sf libungif.so.4.1.0 libgif.so.4.1.0
  ln -sf libgif.so.4.1.0 libgif.so.4
  ln -sf libgif.so.4 libgif.so
  ln -sf libungif.a libgif.a )
mkdir -p $PKG/usr/include
cp -a lib/gif_lib.h $PKG/usr/include
chown root.root $PKG/usr/include/gif_lib.h
chmod 644 $PKG/usr/include/gif_lib.h

# Build the package:
cd $PKG
echo "y
n" | makepkg /tmp/libungif.tgz

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/libungif-4.1.0
  rm -rf $PKG
fi
