#!/bin/sh
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-gconf

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

cd $TMP
tar xyvf $CWD/GConf-1.0.1.tar.bz2
cd GConf-1.0.1
CFLAGS=-O2 ./configure --prefix=/opt/gnome \
            --sysconfdir=/etc/opt/gnome \
            sparc-slackware-linux
make
make DESTDIR=$PKG install
mv $PKG/etc/opt/gnome/gconf/1/path.example $PKG/etc/opt/gnome/gconf/1/path
mkdir -p $PKG/usr/doc/GConf-1.0.1
cp -a ABOUT-NLS AUTHORS COPYING ChangeLog INSTALL NEWS README TODO \
  $PKG/usr/doc/GConf-1.0.1
chmod 644 $PKG/usr/doc/GConf-1.0.1/*
chown root.root $PKG/usr/doc/GConf-1.0.1/*

# Build the package:
cd $PKG
echo "y
n" | makepkg $TMP/gconf.tgz

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/GConf-1.0.1
  rm -rf $PKG
fi
