#!/bin/sh
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-audiofil

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

cd $TMP
tar fxvz $CWD/audiofile-0.2.1.tar.gz
cd audiofile-0.2.1
./configure --prefix=/opt/gnome \
            --sysconfdir=/etc/opt/gnome \
            sparc-slackware-linux
make CFLAGS=-O2
make DESTDIR=$PKG CFLAGS=-O2 install
mkdir -p $PKG/usr/doc/audiofile-0.2.1
cp -a  COPYING TODO README ChangeLog docs/* $PKG/usr/doc/audiofile-0.2.1
chown -R root.root $PKG/usr/doc/audiofile-0.2.1

# Build the package:
cd $PKG
echo "y
n" | makepkg $TMP/audiofil.tgz

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/audiofile-0.2.1
  rm -rf $PKG
fi
