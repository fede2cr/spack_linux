#!/bin/sh
CWD=`pwd` 
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-repgtk

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

cd $TMP
tar xzvf $CWD/rep-gtk-0.15.tar.gz
cd rep-gtk-0.15
CFLAGS=-O2 ./configure --prefix=/opt/gnome \
                       --sysconfdir=/etc/opt/gnome \
                       --localstatedir=/var/lib \
                       sparc-slackware-linux
make
make DESTDIR=$PKG install
mkdir -p $PKG/usr/doc/rep-gtk-0.15
cp -a AUTHORS COPYING ChangeLog INSTALL README README.gtk-defs \
  README.guile-gtk TODO $PKG/usr/doc/rep-gtk-0.15
chown -R root.root $PKG/usr/doc/rep-gtk-0.15

# Build the package:
cd $PKG
echo "y
n" | makepkg $TMP/repgtk.tgz

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/rep-gtk-0.15
  rm -rf $PKG
fi
